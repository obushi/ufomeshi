!!!
%html
  %head
    %title Yammy
    = csrf_meta_tags
    = action_cable_meta_tag
    :ruby
      meta_tags = {
        site: "Yammy",
        description: "寮での献立を見ることができるサービスです",
        viewport: "width=device-width, initial-scale=1.0"
      }
    = display_meta_tags meta_tags
    = stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => 'reload'
    = javascript_include_tag 'application', 'data-turbolinks-track' => 'reload'
  %body
    .uk-container.uk-container-center.uk-margin-top.uk-margin-large-bottom
      %nav.uk-navbar.uk-margin-large-bottom
        = link_to "Yammy", root_path, { class: "uk-navbar-brand uk-hidden-small" }
        %ul.uk-navbar-nav.uk-hidden-small
          %li= link_to "今日の献立", root_path
          %li= link_to "献立一覧", { controller: "meals", action: "index" }, data: {turbolinks: false}
        = link_to "", "#offcanvas", { class: "uk-navbar-toggle uk-visible-small", data: {"uk-offcanvas" => {target: "#offcanvas"} } }
        .uk-navbar-brand.uk-navbar-center.uk-visible-small Yammy
      - if controller.action_name == "show"
        = render partial: "date_nav"
      - elsif controller.action_name == "index"
        %h1.uk-text-center 献立一覧
      = yield
    = render partial: "footer"
